{
    "name": "shortcut-converter",
    "version": "2.0.0",
    "description": "An app built with electron and next js that lets you convert url files into standard windows lnk files, that have way more capabilities.",
    "main": "electron.js",
    "private": true,
    "scripts": {
        "next:dev": "next dev",
        "next:export": "next build; next export;",
        "electron:start": "electron .",
        "electron:build-linux": "electron-builder --linux"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kris10ansn/shortcut-converter.git"
    },
    "author": "kris10ansn",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/kris10ansn/shortcut-converter/issues"
    },
    "homepage": "https://github.com/kris10ansn/shortcut-converter#readme",
    "dependencies": {
        "@zeit/next-css": "^1.0.1",
        "@zeit/next-sass": "^1.0.1",
        "electron-is-dev": "^1.2.0",
        "next": "^9.4.4",
        "node-sass": "^4.14.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "sass": "^1.26.8",
        "windows-shortcuts": "^0.1.6"
    },
    "devDependencies": {
        "@types/node": "^14.0.11",
        "@types/react": "^16.9.35",
        "electron": "^9.0.2",
        "electron-builder": "^22.7.0",
        "typescript": "^3.9.5"
    },
    "build": {
        "files": [
            "./electron.js",
            "./out/**",
            "!./.next/**",
            "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
            "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
            "!**/node_modules/*.d.ts",
            "!**/node_modules/.bin",
            "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
            "!.editorconfig",
            "!**/._*",
            "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
            "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
            "!**/{appveyor.yml,.travis.yml,circle.yml}",
            "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
        ]
    }
}
